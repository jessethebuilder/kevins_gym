<div class="container">
  <div id="users" class="page_content">
    <% @users.in_groups_of(2) do |grp|  %>


      <div class="row user_row">
        <% grp.each do |user| %>
        <div class="col-md-6">
          <div class="user content_block">
            <%= user_bio(user) if user %>
          </div>
        </div><!-- col -->
        <% end %>
      </div><!-- row -->
    <% end %>
  </div><!-- news_stories -->
</div>

<script>
  //normalize_user_cols();

  function normalize_user_cols(){
    $('.user_row').each(function(i, row){
      //There are two columns. Probably start to abstract this before you finish this comment
      var cols = $(row).find('user');
      var tallest_col = cols[0].height() > cols[1].height() ? cols[0].height() : cols[1].height();
      $(tallest_col).css('min-height', tallest_col.height());
    })
  }

</script>