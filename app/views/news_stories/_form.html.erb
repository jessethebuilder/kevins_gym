
<%= form_for(@news_story, :multipart => true) do |f| %>
  <%= error_explanation(@news_story) %>

  <div id="news_story_form">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :title, :class => 'control-label' %>
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
      </div>
      <!--<div class="col-md-6 placeholder"></div>-->
    </div><!-- row -->

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :content, :class => 'control-label' %>
          <%= f.bootsy_area :content, :class => 'form-control' %>
        </div>
      </div><!-- col -->
    </div><!-- row -->

    <div class="row well">
      <%= image_select f, @news_story, :main_image %>
    </div><!-- row -->



    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= security_gate('news_story', 'edit_author_of_news_story') do %>
            <%= f.label :author_id, :class => 'control-label'  %>
            <%= f.select :author_id, for_select(User.affiliated, :full_name, :id, current_user.id), {}, :class => 'form-control'%>
          <% end %>

          <%= security_gate('news_story', 'set_author_with_hidden') do %>
            <%= f.hidden_field :author_id, :value => current_user.id.to_s %>
          <% end %>
        </div>
      </div><!-- col -->
    </div><!-- row -->

    <div class="row form_button_row">
      <div class="col-xs-12">

        <div class="form-group ">
          <%= f.submit 'Publish', :class => 'btn btn-primary' %>
        <!--</div>-->
        <!--<div class="form-group">-->
          <%= f.submit 'Save Draft', :class => 'btn btn-default btn-sm' %>
          <% unless @news_story.new_record? %>
            <%= f.submit 'Archive', :class => 'btn btn-warning btn-sm', :data => {:confirm => 'Archived News Stories will not appear on site. Are you sure?'} %>
          <% end %>
        </div>
      </div><!-- col -->
    </div><!-- row -->
  <% end %>
</div>
