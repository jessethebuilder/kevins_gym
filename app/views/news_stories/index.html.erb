    </div>
    <ul id="news_list">
      <% @news_stories.each do |story| %>
        <li>
          <%= link_to '(edit)', edit_news_story_path(story), :class => 'pull-right' if user_signed_in? && current_user.level > :member%>
          <h3><%= link_to story.title, news_story_path(story) %></h3>
          <p>
            <%= truncate(story.content.html_safe, :length => 250) %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>


