<script>
  $(document).ready(function(){
        colorStoriesOnHover();
      }
  )

  function colorStoriesOnHover(){
    $('ul#news_list a').hover(function(){
      $(this).closest('li').css('border-left', '2px solid #363636');
    }, function(){
      $(this).closest('li').css('border-left-color', 'white');

    })
  }

  $(function() {
    enquire.register("screen and (max-width: 992px)", [{
      match: function () {
        $('#right_content').insertBefore('#left_content');
      },
      unmatch: function () {
        $('#left_content').insertBefore ('#right_content');
      }
    }])
  });
</script>

